<!DOCTYPE html>
<html>
<head>
  <title>Resumelink</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.username.nil? ? current_user.name : current_user.username %>.
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <font color="red"><%= content_tag :div, msg, :id => "flash_#{name}" %></font>
<% end %>
	
<%= yield %>

</body>
</html>
